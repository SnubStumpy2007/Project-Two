  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Set the title of the page using a dynamic variable {{pageTitle}} -->
    <title>{{pageTitle}}</title>
    <!-- Include a CSS reset and an output stylesheet for styling -->
    <link href="reset.css" rel="stylesheet" />
    <link href="output.css" rel="stylesheet" />
    <!-- Include the Tailwind CSS framework from a CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <!-- Create a flex layout section with left alignment -->
    <section class="flex justify-start">
      <!-- Create an aside section for navigation -->
      <aside
        class="p-7 border-solid border-4 border-indigo-500/100 border-x-indigo-500 bg-black text-white flex-none"
      >
        <!-- Display a link to the home page with a background color and hover effect -->
        <a href="{{homeLink}}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Home</a>
        <!-- Display a link to explore blogs with a background color and hover effect -->
        <a href="{{exploreLink}}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Explore Blogs</a>
      </aside>
      <!-- Create an article section for the main content -->
      <article
        class="p-7 border-solid border-4 border-indigo-500/100 border-x-indigo-500 bg-red-600 flex-auto"
      >
        <!-- Create a form with a dynamic action and POST method -->
        <form action="{{formAction}}" method="POST">  
          <div class="container"> 
            <!-- Display a dynamic form title -->
            <h1>{{formTitle}}</h1>  
            <!-- Display a label for the email input field -->
            <label>Email : </label>   
            <!-- Create an input field for email recovery with a dynamic placeholder and required attribute -->
            <input type="text" id="email-recovery" placeholder="{{emailPlaceholder}}" name="email" required>   
            <!-- Create a submit button with a dynamic text -->
            <button type="submit">{{submitButtonText}}</button>   
            <!-- Create a button for cancel action with dynamic text -->
            <button type="button" class="cancelbtn">{{cancelButtonText}}</button>     
          </div>   
        </form>     
      </article>
    </section>
    <!-- Create a footer section with a specific style -->
    <footer
      class="p-7 border-solid border-4 border-indigo-500/100 border-x-indigo-500 bg-red-600"
    >
